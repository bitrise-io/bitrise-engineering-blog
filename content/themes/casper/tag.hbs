{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<header class="main-header tag-head {{#if tag.image}}" style="background-image: url({{tag.image}}){{else}}{{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}{{/if}}">
    <nav class="main-nav overlay clearfix tag-page">
        {{#if @blog.logo}}
            <a class="blog-logo" href="{{@blog.url}}">
                <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
            </a>
        {{/if}}
        <a class="bitrise-homepage" href="#">
            <span class="word">Try Bitrise for free</span>
        </a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{tag.name}}</h1>
            <h2 class="page-description">
                {{#if tag.description}}
                    {{tag.description}}
                {{else}}
                    A {{pagination.total}}-post collection
                {{/if}}
            </h2>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">
    <div class="articles">
        <div class="articles-inner">
            {{! The tag below includes the post loop - partials/loop.hbs }}
            {{> "loop"}}
        </div>
    </div>
    <div class="articles-addon">
        <div class="articles-addon-inner">
            <section class="search">
                <h4>search</h4>
            </section>
            <section class="subscribe">
                <h4>Sign up to our newsletter!</h4>
                <p>Weekly content about the technical challenges we face during the development of Bitrise </p>
                <form class="subscribe-form">
                    <input type="email" value="" name="email" id="emailAddress" placeholder="Your email"></input>
                    <button type="submit" value="Subscribe" name="subscribe" id="subscribe">Subscribe</button>
                </form>
            </section>
            <section>
                <li class="top first">
                    <div class="icon rss">
                        <a href="/feed.xml">Atom feed</a>
                    </div>
                </li>
                <li class="top">
                    <div class="icon twitter">
                        <a href="https://twitter.com/bitrise">Twitter</a>
                    </div>
                </li>
                <li class="top">
                    <div class="icon github">
                        <a href="https://github.com/bitrise-io">Github</a>
                    </div>
                </li>
                <li class="top">
                    <div class="icon bitrise">
                        <a href="https://www.bitrise.io/">Bitrise.io</a>
                    </div>
                </li>
                <li class="top last">
                    <div class="icon updates">
                        <a href="http://blog.bitrise.io/">Bitrise News</a>
                    </div>
                </li>
            </section>
            <h3>Tags</h3>
            <ul class="tags">
                {{#get "tags" limit="all"}}
                    {{#if tags}}
                        {{#foreach tags}}
                            <li>
                                <a href="{{url}}" title="{{name}}" class="tag-{{id}}">{{name}}</a>
                            </li>
                        {{/foreach}}
                    {{/if}}
                {{/get}}
            </ul>
        </div>
    </div>
    <div class="clear"></div>
</main>
